	issn = {0146-0404},
	journal = {Investigative Ophthalmology \& Visual Science},
	keywords = {Adolescent,Adult,Evoked Potentials Visual,Eye,Functional Laterality,Humans,Infant,Middle Aged,Perceptual Masking,Vision Binocular,Vision Disparity},
