	keywords = {Attention; Bottom-up; Colour; Cone-opponent mechanisms; Contrast; Luminance; SSVEPs; Top-down},
	mesh = {Adult; Attention; Cerebral Cortex; Color Perception; Contrast Sensitivity; Electroencephalography; Evoked Potentials, Visual; Female; Humans; Male; Motion Perception; Pattern Recognition, Visual; Retinal Cone Photoreceptor Cells; Young Adult},
	month = {Aug},
	pages = {390-403},
	pmid = {29730493},
	pst = {ppublish},
	title = {Cortical summation and attentional modulation of combined chromatic and luminance signals},
