	keywords = {Animals, Visual Perception, Evoked Potentials, Visual, Female, Electroretinography, Rats, Rats, Sprague-Dawley, steady-state visual evoked potential, rat, PDE6, sildenafil, Sildenafil Citrate, visual evoked potential},
	language = {eng},
