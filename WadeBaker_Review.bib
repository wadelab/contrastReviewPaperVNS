	journal-full = {Neuropharmacology},
	mesh = {Animals; Cats; Macaca; Membrane Potentials; Neurons; Optical Illusions; Patch-Clamp Techniques; Pattern Recognition, Visual; Photic Stimulation; Visual Cortex},
	number = {4-5},
