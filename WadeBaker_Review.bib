	keywords = {Humans, Photic Stimulation, Contrast Sensitivity, Adult, Evoked Potentials, Visual, Male, Middle Aged, Female, Young Adult, Aged, Electroencephalography, Case-Control Studies, Epilepsy, Generalized},
	language = {eng},
	month = oct,
