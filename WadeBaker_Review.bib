	journal = {J Cogn Neurosci},
	journal-full = {Journal of cognitive neuroscience},
	mesh = {Humans; Memory, Short-Term; Evoked Potentials, Visual; Attention; Cognition; Motivation; Visual Perception; Evoked Potentials},
	month = {May},
	number = {5},
	pages = {800-814},
	pmid = {38261370},
	pst = {ppublish},
	title = {Steady-state Visual Evoked Potentials Reveal Dynamic (Re)allocation of Spatial Attention during Maintenance and Utilization of Visual Working Memory},
	volume = {36},
